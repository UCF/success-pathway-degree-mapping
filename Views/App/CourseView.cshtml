@model DegreeMapping.Models.Course

<div class="row pt-5">
    <div class="col-md-12">
        <small>@Html.ActionLink("Degree list", "Checklist", "App", new { id = Model.InstitutionId }) <span class="glyphicon glyphicon-arrow-right"></span> @Html.ActionLink(Model.Institution, "InstitutionView", new { id = Model.InstitutionId }) <span class="glyphicon glyphicon-arrow-right"></span> @Html.ActionLink(Model.Degree, "DegreeView", new { id = Model.DegreeId })</small>
        <h1>@Model.Institution : @Model.Degree</h1>
        <h2><i>@Html.Raw(Model.Code)</i></h2>
    </div>
</div>

<div class="row py-5">
    <div class="col-md-12">

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Active) : @(Model.Active?"Yes":"No")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Code) : @Model.Code
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Credits) : @Model.Credits
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Critical) : @(Model.Critical?"Yes":"No")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.CommonProgramPrerequiste) : @(Model.CommonProgramPrerequiste?"Yes":"No")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Required) : @(Model.Required?"Yes":"No")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Semester) : @Model.Semester
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Term) : @Model.Term
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.UCFRelatedCourse) : @Model.UCFRelatedCourse
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.Description) <br />
                @Html.Raw(Model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 lg">
                @Html.ActionLink("BACK", "DegreeView", new { id = Model.DegreeId }, new { @Class = "btn btn-primary btn-lg" })
                @Html.ActionLink("EDIT COURSE", "CourseEdit", new { id = Model.Id }, new { @Class = "btn btn-info btn-lg" })
            </div>
        </div>
    </div>
</div>