@model DegreeMapping.Models.Institution
@using (Html.BeginForm("InstitutionSave", "App", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id);
    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(x => x.URL)
            @Html.TextBoxFor(x => x.URL, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", cols="30", rows="20" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(x => x.Active)
            @Html.CheckBoxFor(x => x.Active)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.ActionLink("Back", "InstitutionView", new { id = Model.Id }, new { @Class = "btn btn-primary btn-lg" })
            <button class="btn btn-success btn-lg">Save</button>
        </div>
    </div>
}