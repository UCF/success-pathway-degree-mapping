
@model DegreeMapping.Models.CourseMapper
@{
    DegreeMapping.Models.Degree d = DegreeMapping.Models.Degree.Get(Model.DegreeId);
    List<DegreeMapping.Models.Course> list_partnercourses = DegreeMapping.Models.Course.List(Model.DegreeId);
    List<DegreeMapping.Models.Course> list_UCFCourses = new List<DegreeMapping.Models.Course>();
    if (d.UCFDegreeId.HasValue)
    {
        list_UCFCourses = DegreeMapping.Models.Course.List(d.UCFDegreeId);
    }
}
@using (Html.BeginForm("CourseMapperSave", "App", FormMethod.Post, new { @Class = "form-horizontal" }))
{
    @Html.HiddenFor(x=>x.DegreeId)
    <div class="container pt-5">
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(x=>x.PartnerCourses)
                <select name="PartnerCourses" multiple class="form-control" style="height:200px" id="partnerCourseList">
                    @foreach (DegreeMapping.Models.Course c in list_partnercourses.OrderBy(x => x.Code))
                    {
                        <option value="@c.Id">@c.Code</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="Operand">Select One</label>
                <input type="checkbox" name="Operand" id="Operand" value="2" />
            </div>
            <div class="col-md-4">
                @Html.LabelFor(x=>x.UCFCourses)
                <select name="UCFCourses" multiple class="form-control" style="height:200px" id="ucfCourseList">
                    @foreach (DegreeMapping.Models.Course c in list_UCFCourses.OrderBy(x => x.Code))
                    {
                        <option value="@c.Id">@c.Code</option>
                    }
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-lg btn-success">Add Course Map</button>
            </div>
        </div>

    </div>
}
<script type="text/javascript">

    var codeMapper = {
        init: function () {
            $("#partnerCourseList").on("change", function () {
                getPartnerCourseName();
            })
        },

        getPartnerCourseName: function () {
            var tr = "";
            var td = "";
            $("#partnerCourseList option:selected").each(function () {
                var $this = $(this);

                if ($this.length) {
                    var selVal = $this.val();
                    var selText = $this.text();
                    //alert(selVal);
                    //alert(selText);
                    tr = "<td></td>";
                }
            })
        }
    }

    $(document).ready(function () {
        codeMapper.init();
    }
</script>

