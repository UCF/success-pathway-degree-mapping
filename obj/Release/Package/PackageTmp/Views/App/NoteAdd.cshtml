@model DegreeMapping.Models.Note

<div class="row pt-5">
    <div class="col-md-12">
        <small>@Html.ActionLink(Model.Institution, "InstitutionView", new { id = Model.InstitutionId }) <span class="glyphicon glyphicon-arrow-right"></span> @Html.ActionLink(Model.Degree, "DegreeView", new { id = Model.DegreeId })</small>
        <h1>@Model.CatalogYear @Model.Degree <em>New Note</em></h1>
        <h2>@Model.Institution</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4 alert alert-warning mx-0 my-0 h5">
        <div>@DegreeMapping.Models.Note.Message.Get(Model.Institution)</div>
    </div>
</div>


<div class="container pt-5">
    @Html.Action("_Note", "App", new { model = Model })
</div>