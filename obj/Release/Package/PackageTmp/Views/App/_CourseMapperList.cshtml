@model List<DegreeMapping.Models.CourseMapper>

<a name="CourseMapper">&nbsp;</a>
<h2 class="heading-underline">Course Mapper</h2>
<table class="table table-hover pt-3">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>UCF Courses</th>
            <th>Partner Courses</th>
            <th>@Html.ActionLink("Add Course Map", "CourseMapperAdd", "App", new { degreeId = ViewBag.degreeId }, new { @Class = "btn btn-primary btn-lg" })</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (DegreeMapping.Models.CourseMapper cm in Model.OrderBy(x => x.UCFCourses.Select(y => y.Code).FirstOrDefault()))
            {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "CourseMapperEdit", "App", new { id = cm.Id }, null)
                </td>
                <td>
                    @foreach (DegreeMapping.Models.Course c in cm.UCFCourses.OrderBy(x => x.Code))
                    {
                        <div>@c.Code (@c.Credits credits) </div>
                    }
                    @if (cm.AlternateUCFCourseIds.Count > 0)
                    {
                        <div class="pt-2">
                            <h4>Alternate UCF Courses</h4>
                            @foreach (DegreeMapping.Models.Course c in cm.AlternateUCFCourses.OrderBy(x => x.Code))
                            {
                                <div>@c.Code (@c.Credits credits) </div>
                            }
                        </div>
                    }
                </td>
                <td>
                    @foreach (DegreeMapping.Models.Course c in cm.PartnerCourses.OrderBy(x => x.Code))
                    {
                        <div>@c.Code (@c.Credits credits) </div>
                    }
                    @if (cm.AlternatePartnerCourses.Count > 0)
                    {
                        <div class="pt-2">
                            <h4>Alternate Partner Courses</h4>
                            @foreach (DegreeMapping.Models.Course c in cm.AlternatePartnerCourses.OrderBy(x => x.Code))
                            {
                            <div>@c.Code (@c.Credits credits) </div>
                            }
                        </div>
                    }
                </td>
                <td>
                    @Html.ActionLink("Delete", "CourseMapperDelete", "App", new { id = cm.Id, degreeId=cm.DegreeId }, new { @Class = "btn btn-danger btn-lg", onclick = "return confirm('Are you sure you wish to delete this course map?');" })
                </td>
            </tr>
            }
        }
    </tbody>
</table>