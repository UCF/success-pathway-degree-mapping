@model DegreeMapping.Models.Institution
@using (Html.BeginForm("InstitutionSave", "App", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id);
    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(x => x.URL)
            @Html.TextBoxFor(x => x.URL, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(x => x.Active)
            @Html.CheckBoxFor(x => x.Active)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <button class="btn btn-success">Save</button>
        </div>
    </div>
}