@model DegreeMapping.Models.CourseMapper
@{


    DegreeMapping.Models.CourseMapperHtml primary = new DegreeMapping.Models.CourseMapperHtml(Model.DegreeId, Model.DisplayValue, Model.UCFCourses, Model.PartnerCourses, "DisplayValue", "UCFCourseIds", "PartnerCourseIds");
    DegreeMapping.Models.CourseMapperHtml alternate = new DegreeMapping.Models.CourseMapperHtml(Model.DegreeId, Model.AlternateDisplayValue, Model.AlternateUCFCourses, Model.AlternatePartnerCourses, "AlternateDisplayValue", "AlternateUCFCourseIds", "AlternatePartnerCourseIds");

    DegreeMapping.Models.CourseMapperHtml alternate2 = new DegreeMapping.Models.CourseMapperHtml(Model.DegreeId, Model.Alternate2DisplayValue, Model.Alternate2UCFCourses, Model.Alternate2PartnerCourses, "Alternate2DisplayValue", "Alternate2UCFCourseIds", "Alternate2PartnerCourseIds");
    DegreeMapping.Models.CourseMapperHtml alternate3 = new DegreeMapping.Models.CourseMapperHtml(Model.DegreeId, Model.Alternate3DisplayValue, Model.Alternate3UCFCourses, Model.Alternate3PartnerCourses, "Alternate3DisplayValue", "Alternate3UCFCourseIds", "Alternate3PartnerCourseIds");
    DegreeMapping.Models.CourseMapperHtml alternate4 = new DegreeMapping.Models.CourseMapperHtml(Model.DegreeId, Model.Alternate4DisplayValue, Model.Alternate4UCFCourses, Model.Alternate4PartnerCourses, "Alternate4DisplayValue", "Alternate4UCFCourseIds", "Alternate4PartnerCourseIds");
}


@using (Html.BeginForm("CourseMapperSave", "App", FormMethod.Post, new { @Class = "form-horizontal" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.DegreeId)
    <div class="pt-5">
        <button type="submit" class="btn btn-success btn-lg">Save</button>
        @if (Model.Id > 0)
        {
            @Html.ActionLink("Delete", "CourseMapperDelete", "App", new { id = Model.Id, degreeId = Model.DegreeId }, new { @Class = "btn btn-danger btn-lg", onclick = "return confirm('Are you sure you wish to delete this course map?');" })
        }
        @Html.ActionLink("Cancel", "DegreeView", "App", new { id = Model.DegreeId }, new { @Class = "btn btn-primary btn-lg" })
    </div>

    <section class="py-5 my-5 box-shadown-sm-right">
        <h1 class="heading-underline pl-2">Primary</h1>
        @Html.Action("_CourseMapperHtml", new { cmh = primary })
    </section>
    <section class="py-5 my-5 box-shadown-sm-right">
        <h1 class="heading-underline pl-2">Alternate</h1>
        @Html.Action("_CourseMapperHtml", new { cmh = alternate })
    </section>
    <section class="py-5 my-5 box-shadown-sm-right">
        <h1 class="heading-underline pl-2">Alternate 2</h1>
        @Html.Action("_CourseMapperHtml", new { cmh = alternate2 })
    </section>
    <section class="py-5 my-5 box-shadown-sm-right">
        <h1 class="heading-underline pl-2">Alternate 3</h1>
        @Html.Action("_CourseMapperHtml", new { cmh = alternate3 })
    </section>
    <section class="py-5 my-5 box-shadown-sm-right">
        <h1 class="heading-underline pl-2">Alternate 4</h1>
        @Html.Action("_CourseMapperHtml", new { cmh = alternate4 })
    </section>

    <div class="pt-5">
        <button type="submit" class="btn btn-success btn-lg">Save</button>
        @if (Model.Id > 0)
        {
            @Html.ActionLink("Delete", "CourseMapperDelete", "App", new { id = Model.Id, degreeId = Model.DegreeId }, new { @Class = "btn btn-danger btn-lg", onclick = "return confirm('Are you sure you wish to delete this course map?');" })
        }
        @Html.ActionLink("Cancel", "DegreeView", "App", new { id = Model.DegreeId }, new { @Class = "btn btn-primary btn-lg" })
    </div>
}