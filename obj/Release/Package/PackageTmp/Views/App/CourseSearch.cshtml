@model  List<DegreeMapping.Models.Course>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Search Course</h1>
        </div>
    </div>

    <div class="row py-5">
        <div class="col-md-12">
            @using (Html.BeginForm("CourseSearch", "App", FormMethod.Post, new { @Class = "form-inline" }))
            {
                @*<div class="form-group">
                    <select name="catalogId" class="form-control" style="height:34px;">
                        <option>2021</option>
                    </select>
                </div>*@
                <input type="hidden" name="catalogId" value="1" />
                <div class="form-group">
                    <input type="text" class="form-control" name="keyword" value="@ViewBag.Keyword"/>
                    <button type="submit" name="submit" class="btn btn-primary btn-lg">Search</button>
                </div>
            }
        </div>
    </div>

    @if (Model.Count > 0)
    {
        int count = 0;
        <div class="alert alert-warning">Found @Model.Count courses</div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>Course</th>
                    <th>Degree</th>
                    <th>Institution</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DegreeMapping.Models.Course c in Model.OrderBy(x => x.CatalogYear).ThenBy(x=>x.Code).ThenBy(x => x.Degree).ThenBy(x => x.Institution))
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.ActionLink("Edit", "CourseEdit", new { id = c.Id })</td>
                        <td>@c.Code</td>
                        <td>@c.CatalogYear @c.Degree</td>
                        <td>@c.Institution</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>