<div class="container">
    <div class="row py-5">
        <div class="col-md-12">
            @using (Html.BeginForm("CourseSearch", "App", FormMethod.Post, new { @Class = "form-inline" }))
            {
                <div class="form-group">
                    <input type="text" class="form-control" name="keyword" value="@ViewBag.Keyword" style="width:300px" />
                    <div class="form-group">
                        <select name="catalogId" class="form-control" style="height:30px">
                            @foreach (DegreeMapping.Models.Catalog cy in list_cy.Where(x => x.Active).OrderByDescending(x => x.Year))
                            {
                                if (catalogId == cy.Id)
                                {
                                    <option selected="selected" value="@cy.Id">@cy.Year</option>
                                }
                                else
                                {
                                    <option value="@cy.Id">@cy.Year</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <select name="collegeId" class="form-control" style="height:30px">
                            <option>Select College</option>
                            @foreach (DegreeMapping.Models.College college in list_c.OrderBy(x => x.CollegeName))
                            {
                                if (collegeId == college.Id)
                                {
                                    <option selected="selected" value="@college.Id">@college.CollegeName</option>
                                }
                                else
                                {
                                    <option value="@college.Id">@college.CollegeName</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-group">
                        <select name="institutionId" class="form-control" style="height:30px">
                            <option>Select Institution</option>
                            @foreach (DegreeMapping.Models.Institution instition in list_i.OrderBy(x => x.Name))
                            {
                                if (institutionId == instition.Id)
                                {
                                    <option selected="selected" value="@instition.Id">@instition.Name</option>
                                }
                                else
                                {
                                    <option value="@instition.Id">@instition.Name</option>
                                }

                            }
                        </select>
                    </div>
                    <button type="submit" name="submit" class="btn btn-primary btn-lg">Search</button>
                </div>
            }
        </div>
    </div>

    @if (Model.Count > 0)
    {
        int count = 0;

        <div class="row">
            <div class="col-md-10">
                <div class="alert alert-warning">Found @Model.Count courses</div>
            </div>
            <div class="col-md-2">
                <a href="#" class="btn btn-primary btn-lg" onclick="download_table_as_csv('course-search');">Download as CSV</a>
            </div>
        </div>

        <table class="table table-hover" id="course-search">
            <thead>
                <tr>
                    <th>Count</th>
                    <th>-</th>
                    <th>Course</th>
                    <th>Degree</th>
                    <th>College</th>
                    <th>Institution</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DegreeMapping.Models.Course c in Model.OrderBy(x => x.CatalogYear).ThenBy(x => x.Code).ThenBy(x => x.Degree).ThenBy(x => x.Institution))
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.ActionLink("Edit", "CourseEdit", new { id = c.Id })</td>
                        <td>@c.Code</td>
                        <td>@c.CatalogYear @c.Degree</td>
                        <td>@c.CollegeName</td>
                        <td>@c.Institution</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<script src="~/Scripts/table-to-csv.js"></script>