@model  List<DegreeMapping.Models.Course>
@{

    string keyword = ViewBag.Keyword ?? string.Empty;
    int catalogId = ViewBag.CatalogId ?? 0;
    int collegeId = ViewBag.CollegeId ?? 0;
    int institutionId = ViewBag.Institution ?? 0;

    List<DegreeMapping.Models.Catalog> list_cy = DegreeMapping.Models.Catalog.List();
    List<DegreeMapping.Models.College> list_c = DegreeMapping.Models.College.List(null);
    List<DegreeMapping.Models.Institution> list_i = DegreeMapping.Models.Institution.List();

}
@section JumbotronMain {
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Search Courses</h1>
                </div>
            </div>
        </div>
    </div>
}

 @*@if (User.IsInRole(cy.EditableRole))
