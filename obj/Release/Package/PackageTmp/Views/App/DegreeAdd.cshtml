@model DegreeMapping.Models.Degree
@{
    ViewBag.Title = Model.Name;
    DegreeMapping.Models.Catalog cy = DegreeMapping.Models.Catalog.Get(Model.CatalogId);
}

@section JumbotronMain {
    <div class="jumbotron jumbotron-fluid" style="background-color:@cy.BGColor">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="h3">
                        @Html.ActionLink("Degree List", "DegreeList", "App", new { id = Model.CatalogId }, null) <span class="glyphicon glyphicon-arrow-right"></span>
                    <!-- Throws error when Model.Id = 0 Html.ActionLink(Model.Name, "DegreeView", new { id = Model.Id })-->
                </div>
                <h1>Add degree for @Model.CatalogYear @Model.Institution</h1>
                <h2>@Html.Raw(Model.Name)</h2>
            </div>
        </div>
    </div>
    </div>
}
