@model DegreeMapping.Models.Note

@using (Html.BeginForm("NoteSave", "App", FormMethod.Post, new { @Class = "form-horizontal" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.DegreeId)
    <div class="row pt-2">
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(x => x.Name) :
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row pt-2">
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(x => x.Value) :
                @Html.TextAreaFor(x => x.Value, new { @class = "form-control", col = "40", rows = "6" })
                <span class="alert alert-warning">500 characters max</span>
            </div>
        </div>
    </div>

    <div class="row pt-2">
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(x => x.Required) :
                @Html.CheckBoxFor(x => x.Required)
            </div>
        </div>
    </div>

    <div class="row pt-2">
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(x => x.Active) :
                @Html.CheckBoxFor(x => x.Active)
            </div>
        </div>
    </div>

    <div class="row pt-2">
        <div class="col-md-2">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>

        @if (Model.Id > 0)
        {
            <div class="col-md-2">
                <div class="form-group">
                    @Html.ActionLink("Delete", "NoteDelete", new { id = Model.Id, degreeId = Model.DegreeId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wish to delete this note?');" })
                </div>
            </div>
        }
    </div>
}