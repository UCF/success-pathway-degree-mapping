<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pathway - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="/Pathway/Content/bootstrapv4.0.0-alpha.6.css" rel="stylesheet" />
    <link href="/Pathway/Content/Site.css" rel="stylesheet" />
    <link href="/Pathway/Content/site-override.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top pt-5">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("UCF Pathway", "Index", "Home", null, new { @class = "navbar-brand h1" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="float-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="px-3">@Html.ActionLink("Institutions", "Institutions", "App", null, new { @class="btn btn-primary btn-lg"})</span>
                        if (User.Identity.Name == "jgiron")
                        {
                         <span class="px-3">@Html.ActionLink("View Users", "ViewUsers", "App", null, new { @class="btn btn-primary btn-lg" })</span>
                        }
                        <span class="px-3">@Html.ActionLink("Sign Out", "SignOut", "Home", null, new { @class="btn btn-primary btn-lg" })</span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            @if (User.Identity.IsAuthenticated)
            {
                <hr />
                <div>You are signed in as @User.Identity.Name</div>
            }
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
